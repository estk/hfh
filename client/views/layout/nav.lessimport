nav {
  text-align:right;
  display: block;

  ul {
    .make-row;
    margin-left:0;
    padding-left:0;

    li {
      .make-sm-column(2);
      .make-sm-column-push(4);
      list-style-type: none;
      font-weight: bold;
      text-align:right;
    }
    a {
      color: #000;
      text-decoration: none;
      font-weight: bold;
    }
    a:visited {
      color: #000;
      text-decoration: none;
    }
  }
}
